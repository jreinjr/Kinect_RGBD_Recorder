<Window x:Class="Kinect_RGBD_Recorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_RGBD_Recorder"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
		<Image x:Name="kinectImage"/>
		<Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
		<Button x:Name="stop" Content="Stop" HorizontalAlignment="Left" Margin="106,9,0,0" VerticalAlignment="Top" Width="75" Click="stop_Click"/>
	</Grid>
</Window>
